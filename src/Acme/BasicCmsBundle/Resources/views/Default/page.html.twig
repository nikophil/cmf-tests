<h1>{{ page.title }}</h1>

<h2>Menu</h2>
<div id="menu">
    {{ knp_menu_render('main-menu') }}
</div>

<div id="block">
    {{ sonata_block_render({'name': '/cms/blocks/RssBlock'}) }}
</div>

<p>{{ page.content|raw }}</p>

<h2>Our Blog Posts</h2>

<ul>
    {% for post in posts %}
    <li><a href="{{ path(post) }}">{{ post.title }}</a></li>
    {% endfor %}
</ul>